{
    "printWidth": 120,
    "singleQuote": true,
    "trailingComma": "none",
    "semi": false,
    "tabWidth": 4,
    "bracketSpacing": true,
    "importOrder": [
        "^[./]",
        "^@/types/(.*)$",
        "<THIRD_PARTY_MODULES>",
        "^@/Layouts/(.*)$",
        "^@/Pages/(.*)$",
        "^@/Components/(.*)$",
        "^@/utils/(.*)$"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true,
    "plugins": [
        "@trivago/prettier-plugin-sort-imports",
        "prettier-plugin-tailwindcss"
    ]
}
