{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "resources/js/**/*.ts",
    "resources/js/**/*.d.ts",
    "resources/js/**/*.vue",
  ],
  "exclude": [
    "./resources/js/**/__tests__/*"
  ],
  "compilerOptions": {
    "allowJs": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "strict": true,
    "isolatedModules": true,
    "target": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": [
        "./resources/js/*"
      ],

      "ziggy-vue": [
        "./vendor/tightenco/ziggy/dist/vue.m"
      ]
    },
    "composite": true,
    "baseUrl": "."
  }
}
